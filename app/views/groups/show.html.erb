<div class="span12">

  <div class="group">
    <% if current_user && @group.editable_by?(current_user) %>
      <%= link_to("Edit", edit_group_path(@group)) %>
    <% end %>
    <%= link_to("New Post", new_group_post_path(@group), class: "btn btn-mini btn-primary") if current_user %>
  </div>
  <h2><%= @group.title %></h2>
  <p><%= @group.description %></p>

  <table class="table">
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td>
            <span class="author"><strong> Author : <%= post.author.try(:name) %> </strong></span>
            <p><%= post.content %></p>
          </td>

          <% if current_user && post.editable_by?(current_user) %>
            <td><%= link_to("Edit", edit_group_post_path(post.group, post), class: "btn btn-mini") %></td>
            <td><%= link_to("Delete", group_post_path(post.group, post), method: :delete, data: { confirm: "Are you sure?" }) %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>
