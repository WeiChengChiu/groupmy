<div class="group pull-right">
  <%= render_group_join_or_quit_button(@group) %>
</div>

<div class="span12">
  <div class="group">
    <%= rende_new_post_button_of_group(@group) %>
    <%= render_group_edit_button(@group) %>
  </div>
  <h2><%= render_group_title(@group) %></h2>
  <p><%= @group.try(:description) %></p>

  <table class="table">
    <thead>
      <tr>
        <td>Title</td>
        <td>Owner</td>
        <td>Action</td>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td>
            <span class="author"><strong> Author : <%= post.author.try(:name) %> </strong></span>
            <p><%= render_post_show_button_of_group(@group, post) %></p>
          </td>
          <td><%= render_post_management_button_of_group(@group, post) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
